// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  type          String   // "general", "speaker", or "sponsor"
  name          String
  email         String
  subject       String
  message       String
  additionalData String?  // JSON string for type-specific fields
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  status        String   @default("new") // new, in-progress, completed
  assignedTo    String?  // Optional: staff member handling this contact
  notes         String?  // Optional: internal notes

  @@index([type])
  @@index([email])
  @@index([status])
  @@index([createdAt])
}
